<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.deepak.training.spring3.model.PetOld" table="pet">
		<id name="id" column="id">
			<generator class="assigned" />
		</id>
        <property name="owner" />
		<property name="name" />
		<property name="species" />
		<property name="sex" />
		<property name="birth" />
		<property name="death" />
	</class>

</hibernate-mapping>
